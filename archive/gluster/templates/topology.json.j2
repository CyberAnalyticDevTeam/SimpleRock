{
  "clusters": [
    {
      "nodes": [
{% for host in groups['all'] %}
        {
          "node": {
            "hostnames": {
              "manage": [
                "{{ hostvars[host].inventory_hostname }}"
              ],
              "storage": [
                "{{ hostvars[host].management_ipv4 }}"
              ]
            },
            "zone": 1
          },
          "devices": [
{% for dev in hostvars[host].ceph_disks %}
            "{{ dev }}"{% if not loop.last %},
{% endif %}
{% endfor%}
          ]
        }{% if not loop.last %},
{% endif %}
{% endfor %}
      ]
    }
  ]
}
