apiVersion: apps/v1beta1
kind: Deployment
metadata:
  name: kafka
  labels:
    component: kafka
spec:
  replicas: {{ groups['sensors'] | length }}
  selector:
    matchLabels:
     component: kafka
  template:
    metadata:
      labels:
        component: kafka
    spec:
      containers:
      - name: zookeeper
        image: {{ zookeeper_container }}:{{ zookeeper_ver }}
        resources:
          limits:
            cpu: 1000m
          requests:
            cpu: 100m
        ports:
        - containerPort: 9092
          name: transport
        volumeMounts:
         - mountPath: "{{ zookeeper_data_path }}"
           name: {{ zookeeper_pv_data }}
         - mountPath: "{{ zookeeper_config_path }}"
           name: {{ zookeeper_config_map }}

      - name: kafka
        image: {{ kafka_container_name }}
        env:
        - name: KAFKA_ZOOKEEPER_CONNECT
          value: 'zookeeper:{{ zookeeper_port }}'
        resources:
          limits:
            cpu: 1000m
          requests:
            cpu: 100m
        ports:
        - containerPort: 9092
          name: transport
        volumeMounts:
          - mountPath: "{{ kafka_config_path }}"
            name: {{ kafka_config_map }}
          - mountPath: "{{ kafka_data_path }}"
            name: {{ kafka_pv_data }}

      volumes:
      - name: {{ zookeeper_pv_data }}
        persistentVolumeClaim:
          claimName: {{ zookeeper_pv_data }}-claim
      - name: {{ zookeeper_config_map }}
        configMap:
          name: {{ zookeeper_config_map }}
      - name: {{ kafka_pv_data }}
        persistentVolumeClaim:
          claimName: {{ kafka_pv_data }}-claim
      - name: {{ kafka_config_map }}
        configMap:
          name: {{ kafka_config_map }}
      nodeSelector:
        role: sensor
      affinity:
        podAntiAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
          - labelSelector:
              matchExpressions:
              - key: role
                operator: In
                values:
                - sensor
            topologyKey: "kubernetes.io/hostname"
