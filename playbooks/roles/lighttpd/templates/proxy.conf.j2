#=======================
# Kibana forward
$HTTP["url"] =~ "^/kibana" {
 proxy.server = ( "" => (( 
   "host" => "kibana",
   "port" => "{{ kibana_port }}"
)))
}

#=======================
# Portainer forward
$HTTP["url"] =~ "^/portainer" {
 proxy.server = ( "" => (( 
   "host" => "portainer",
   "port" => "{{ portainer_port }}"
)))
}
